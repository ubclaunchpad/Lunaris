{
  "name": "lunaris-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Lunaris CDK infrastructure and reusable AWS constructs",
  "workspaces": [
    "packages/*",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "bootstrap": "npm install",
    "cdk:deploy": "npm run cdk:deploy --workspace=packages/cdk",
    "cdk:synth": "npm run cdk:synth --workspace=packages/cdk",
    "cdk:diff": "npm run cdk:diff --workspace=packages/cdk"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.7.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "keywords": [
    "aws",
    "cdk",
    "constructs",
    "infrastructure",
    "monorepo"
  ],
  "author": "",
  "license": "MIT"
}